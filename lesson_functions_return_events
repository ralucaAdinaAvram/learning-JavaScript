   <!--  <script>

        function sum(a, b) {
            var c = a + b;
            return c;
        }

        function getAnswer() {
            // 1. Fetch the value of Number 1 and Number 2
            // 2. We need to sum those two numbers 
            // 3. we want to print the answer of sum on site. 

            var firstNumber = window.document.getElementById("first").value;
            var secondNumber = window.document.getElementById("second").value;

            var a = parseInt(firstNumber);
            var b = parseInt(secondNumber);

            var answer = sum(a, b);

            document.getElementById("answer").innerHTML = answer;
        }

    </script> -->




